<div class='allCntented xui' style='width:100%;margin:0 auto;text-align: center;'>
    <div class='contentsd'>
     
        <% Posts.forEach( function (post){ %> 
            <a href="/d/<%= post.id_am %> ">
                <article class='post-width'>
                    <div class='pic'>
                        <% var img = post.foto_capa %> 
                        <img   src="/images/loading-animated-small.svg" name="relatedlazy" att="<%= post.id_am %>" data="<%= Link %><%= post.foto_capa %>" alt="<%= post.post_name %> " srcset="">
                    </div>
                    <div class='description'>
                        <% 
                  function getLingua(l){
                        switch (l) {
                            case 'Portugues':
                            return '/images/brazil.png'
                                break;
                            case 'Inglesh':
                            return'/images/inglesh.png'
                            break;
                            case 'Japan':
                            return'/images/japan.png'
                            break;
                            case 'Chines':
                            return'/images/china.png'
                            break;
                            case 'korea':
                            return '/images/south-korea.png'
                            break;
                        }
                    }
                             %> 
                       <div style='width:100%;display:block;'><img src="<%= getLingua(post.ideoma) %>" style="display:inline-table;float:left;width:20px;margin:5px;height:20px;"><h1 class="title">  Book Id#<%= post.id_am %></h1></div>
                       </div>
            </article>
            </a>
      <%}) %>

  </div>
  </div>
