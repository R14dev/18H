<div class="pagination-vs">
        <section class='paginacao'>
            <style>
                .paginacao{
                    text-align:center;
                }
            </style>
        <nav>
        <ul class='nav' style='display:inline-table; text-align:center;width: 50%; list-style:none; margin:0 auto;'>
             <%  if(Pagination == Page){ %>
                <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>/<%= --Page %> "><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
                <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>/<%= Page %> "><div class="navic" style="width: 170px;">NEXT</div></a></li>
                <%  }else if( Page == 1){%>  
            <% var i = Page -2; %> 
            <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>"><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
            <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>/2 %>"><div class="navic" style="width: 170px;">NEXT</div></a></li>
            <% }else{ %> 
                <% var i = Page -2; %> 
                <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>/<%= i %> "><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
                <li style="background: none;"> <a style="background: none;" href="/l/<%= LanguageName %>/<%= ++Page %>"><div class="navic" style="width: 170px;">NEXT</div></a></li>
                <% } %> 
        </ul> 
        </nav>
    </section>
</div>


