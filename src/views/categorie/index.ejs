<div class='allCntented xui' style='width:100%;margin:0 auto;text-align: center;'>
    <div class='contentsd'>

        <% Posts.forEach( function (post){ %> 
            <a href="/d/<%= post.id_am %> ">
                <article class='post-width'>
                    <div class='pic'>
                        <% var img = post.foto_capa %> 
                        <img  src="/images/loading-animated-small.svg" name="relatedlazy" data="<%= Link %><%= post.foto_capa %>" att="<%= post.id_am %>" alt="<%= post.post_name %> " srcset="">
                    </div>
                    <div class='description'>
                        <% 
                  function getLingua(l){
                        switch (l) {
                            case 'Portugues':
                            return '/images/brazil.png'
                                break;
                            case 'Inglesh':
                            return'/images/inglesh.png'
                            break;
                            case 'Japan':
                            return'/images/japan.png'
                            break;
                            case 'Chines':
                            return'/images/china.png'
                            break;
                            case 'korea':
                            return '/images/south-korea.png'
                            break;
                        }
                    }
                             %> 
                       <div style='width:100%;display:block;'><img src="<%= getLingua(post.ideoma) %>" style="display:inline-table;float:left;width:20px;margin:5px;height:20px;"><h1 class="title">  Book Id#<%= post.id_am %></h1></div>
                       </div>
            </article>
            </a>
      <%}) %>

  </div>
  </div>
  <%- include('../inc/mob1.ejs') %>
 
<div class="pagination-vs">
    <section class='paginacao'>
        <style>
            .paginacao{
                text-align:center;
            }
        </style>
        <nav>
           
        <ul class='nav' style='display:inline-table; text-align:center;width: 50%; list-style:none; margin:0 auto;'>
            <% var i = (Page == 1) ? Page : Page -1; %> 
            <%  if(Pagination == Page){ %>
                <li style="background: none;"> <a style="background: none;" href="/<%= Page %> "><div class="navic" style="width: 170px;">NEXT</div></a></li>
                <li style="background: none;"> <a style="background: none;" href="/<%= --Page %> "><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
                <%  }else if( Page == 1 || Page == 2){%>                 
                    <li style="background: none;"> <a style="background: none;" href="/c/<%= LanguageName %>/1 "><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
                    <li style="background: none;"> <a style="background: none;" href="/c/<%= LanguageName %>/<%= ++Page %>"><div class="navic" style="width: 170px;">NEXT</div></a></li>    
            <% }else{ %> 
                <li style="background: none;"> <a style="background: none;" href="/c/<%= LanguageName %>/<%= i %> "><div class="navic" style="width: 170px;">PREVIOUS</div></a></li>
                <li style="background: none;"> <a style="background: none;" href="/c/<%= LanguageName %>/<%= ++Page %>"><div class="navic" style="width: 170px;">NEXT</div></a></li>
                <% } %> 
        </ul> 
    </nav>
    </section>
</div>


